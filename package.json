{
  "name": "template-dance",
  "displayName": "template dance",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand",
    "onView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "nodeDependencies",
        "contents": "No node templates found.\n[Add Template](command:template-dance.addTemplate)"
      }
    ],
    "commands": [
      {
        "command": "template-dance.hello",
        "title": "Sey Hello",
        "icon": "./icon-dark.svg"
      },
      {
        "command": "template-dance.refreshTemplate",
        "title": "refresh template",
        "icon": "./icon-refresh.svg"
      },
      {
        "command": "template-dance.addTemplate",
        "title": "Add template",
        "icon": "./icon-add.svg"
      },
      {
        "command": "template-dance.editTemplate",
        "title": "edit template",
        "icon": "./icon-edit.svg"
      },
      {
        "command": "template-dance.viewTemplate",
        "title": "view template",
        "icon": "./icon-browse.svg"
      },
      {
        "command": "template-dance.deleteTemplate",
        "title": "delete template",
        "icon": "./icon-delete.svg"
      },
      {
        "command": "template-dance.useTemplate",
        "title": "use template",
        "icon": "./icon-check.svg"
      },
      {
        "command": "template-dance.searchTemplate",
        "title": "search template",
        "icon": "./icon-search.svg"
      },
      {
        "command": "template-dance.selectTemplate",
        "title": "select template"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "template-dance",
          "title": "template Dance",
          "icon": "./icon-dark.svg"
        }
      ]
    },
    "views": {
      "template-dance": [
        {
          "id": "templateDanceTreeView",
          "name": "template Dance",
          "icon": "./icon-dark.svg",
          "type": "tree"
        },
        {
          "id": "help",
          "name": "help"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "template-dance.refreshTemplate",
          "group": "navigation",
          "when": "view == templateDanceTreeView"
        },
        {
          "command": "template-dance.addTemplate",
          "group": "navigation",
          "when": "view == templateDanceTreeView"
        },
        {
          "command": "template-dance.searchTemplate",
          "group": "navigation",
          "when": "view == templateDanceTreeView"
        }
      ],
      "view/item/context": [
        {
          "command": "template-dance.viewTemplate",
          "group": "inline",
          "when": "templateItemContext == true"
        },
        {
          "command": "template-dance.editTemplate",
          "group": "inline",
          "when": "templateItemContext == true"
        },
        {
          "command": "template-dance.deleteTemplate",
          "group": "inline",
          "when": "templateItemContext == true"
        },
        {
          "command": "template-dance.addTemplate",
          "group": "inline",
          "when": "templateItemContext == true"
        },
        {
          "command": "template-dance.useTemplate",
          "group": "inline",
          "when": "templateItemContext == true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.3.0"
  }
}
